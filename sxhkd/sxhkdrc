# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# quit or restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# media playback
{XF86AudioPlay,XF86AudioPause,XF86AudioNext,XF86AudioPrev}
	{playerctl play,playerctl stop,playerctl next,playerctl previous}

# volume
{XF86AudioMute,XF86AudioLowerVolume,XF86AudioRaiseVolume}
	{pactl set-sink-mute 0 toggle,pactl set-sink-volume 0 -5%,pactl set-sink-volume 0 +5%}

# brightness
super + {F2,F3}
	brightnessctl s 12000{-,+}

# open terminal or make current window biggest
super + {_,shift + }Return
	{wezterm, bspc node -s biggest.local}

# open file manager
super + e
	nemo

# powermenu
super + Delete
	~/.config/scripts/powermenu.sh

# rofi apps
super + p
	rofi -show drun
# rofi run
super + r
	rofi -show run

# close or kill window
super + {_,shift + }w
	bspc node -{c,k}

# rotate desktop or selection
super + {_, shift + } {Left,Right}
	bspc node {_,@/} -R {-,+}90

# select parent
super + s
	bspc node -f @parent

# change window state
super + {t,ctrl + t,l,f}
	bspc node -t {tiled,psuedo_tiled,floating,fullscreen}

# change window size
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + shift + {h,j,k,l}
	bspc node -z {left 20 0,bottom 0 -20,top 0 20,right -20 0}

# focus or send window to different desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
