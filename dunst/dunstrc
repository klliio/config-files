[global]
	# show notifications on the same screen as the cursor
	follow = mouse
	
	# sizing
	width = 400
	height = 350

	# placement
	origin = top-right
	offset = 20x52

	scale = 0

	# maximum number of notifications
	notification_limit = 12

	progress_bar = true
	progress_bar_frame_width = 1
	progress_bar_min_width = 250
	progress_bar_max_width = 250

	# rounded corners
	icon_corner_radius = 12

	# higher more transparent
	transparency = 0

	#gap between notifcations
	seperator_height = 3

	horizontal_padding = 8

	# gap between the icon and text
	text_icon_padding = 10

	# size of border
	frame_width = 2

	# colour of the border
	frame_color = "#7dcfff"

	gap_size = 0

	seperator_color = frame

	# sort by urgency
	sort = yes

	# don't remove notifications if the user is idle
	idle_threshold = 160

	font = UbuntuMono Nerd Font 10

	# is raised to font height if less than the font size
	line_height = 0

	markup = full

	# the format of the message
	format = "<b>%s</b>\n%b\n\n<small><b>%a</b></small>"

	alignment = left
	vertical_alignment = center

	show_age_threshold = 90

	# where to show an ellipsis in long lines
	ellipsize = middle

	# don't change
	ignore_newline = no

	# make duplicates one
	stack_duplicates = true
	hide_duplicate_count = false

	# indicators for (U)rls and (A)ctions
	show_indicators = yes

	enable_recursive_icon_lookup = true
	icon_theme = Adwaita

    icon_path = /usr/share/icons/Papirus-Dark/16x16/status/:/usr/share/icons/Papirus-Dark/16x16/devices/

	# keep history visible
	sticky_history = true
	history_length = 20

	# opening url
	browser = /usr/bin/firefox

	always_run_script = true

	# window details
	title = Dunst
	class = Dunst

	# round corners
	corner_radius = 13

	ignore_dbusclose = false
	force_xwayland = false
	force_xinerama = false

	# mouse actions
	mouse_left_click = close_current
	mosue_middle_click = do_action, close_current
	mouse_right_click = close_all

	# Align icons left/right/off
	icon_position = left

	# scale smaller icons uo to this size, set to 0 to disable
	min_icon_size = 75

	# Scale larger icons down to this size, set to 0 to disable
	max_icon_size = 75

[urgency_low]
	background = "#11111b"
	foreground = "#cdd6f4"
	timeout = 10

[urgency_normal]
	background = "#11111b"
	foreground = "#cdd6f4"
	timeout = 10

[urgency_critical]
	background = "#cdd6f4"
	foreground = "#11111b"
	timeout = 0
